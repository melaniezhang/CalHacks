<section id="index" class="section">
	<div class="container hidden" id="rideshome">

		   	 	<div id="hello">
		    		<h2>Hello, <%= user.first %> <%= user.last %>!</h2>
				</div>

		<div class="row" id="choose">
			<div class="col-sm-4">
				<a href="/rides/new">
				<img src="img/steer.png" width="100" height="100" /><br>
				<span>Create Ride</span></a>
			</div>

			<div class="col-sm-4">
				<a href="/rides/find">
				<img src="img/truck.png" width="100" height="100" /><br>
				<span>Find Ride</span>
				</a>
			</div>
			<div class="col-sm-4">
						<a href="#list" id="listprompt">

							<img src="img/glass.png" width="100" height="100" /><br>

				<span>View All</span></a>
			</div>
		</div>
	</div>
</section>

<section id="list" class="section">
<div>Ride List</div>
<div id="ridelist" class="container">
	<table class="table" border="0">
		<thead>
			<tr>
				<th></th>
				<th><strong>Driver Name</strong></th>
				<th><strong>Origin</strong></th>
				<th><strong>Destination</strong></th>
				<th><strong>Price</strong></th>
				<th><strong>Date</strong></th>
			</tr>
		</thead>
		<tbody>
		<% rides.forEach(function(rides){ %>
			<tr>
				<td><a href="/rides/<%= rides._id%>">More Info</a></td>
				<td><%= rides.driver.first %> <%= rides.driver.last %></td>
				<td><%= rides.origin %></td>
				<td><%= rides.destination %></td>
				<td><%= rides.price %></td>
				<td><%= rides.date %></td>
			</tr>
		<% }); %>
		</tbody>
	</table>
</div>
</section>
<script>
$(document).ready(function(){
	    $('.container').fadeIn(800).removeClass('hidden');

	$("#listprompt").click(function() {
    $('html, body').animate({
        scrollTop: $("#list").offset().top
    }, 1000);
});
});
</script>
