<% include partials/header %>
<!-- nav -->
	<nav class="navbar navbar-default">
	  <div class="container">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <a class="navbar-brand" href="/">Ridesharing</a>
	    </div>

	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

	      <ul class="nav navbar-nav navbar-right">
	        <li><a href="/logout">Log Out <i class="fa fa-sign-out" aria-hidden="true"></i></a></li>
	      </ul>
	      <ul class="nav navbar-nav navbar-right">
	        <li><a href="/profile">Profile <i class="fa fa-user" aria-hidden="true"></i></a></li>
	      </ul>
	    </div>
	  </div>
	 </nav>

<div class="container hidden">
	<div class="row">
			<div class="col-lg-12">
				<div id="results">
					<p>
						<span>Displaying rides that include</span><a class="btn btn-primary btn-sm" href="/rides" style="float:right;"">Back to all rides</a>
						<br>
						<div id="indent">
						<% if(ride.origin) { %>
							<strong>Origin</strong>: <%= ride.origin %><br>
						<% } %>
						<% if(ride.destination) { %>
							<strong>Destination</strong>: <%= ride.destination %><br>
						<% } %>
						<% if(ride.date) { %>
							<strong>Date</strong>: <%= ride.date %><br>
						<% } %>
						</div>
					</p>
				</div>
					<table class="table" id="found" style="background-color: rgba(0,0,0,0.25);">
						<thead>
							<tr>
								<th></th>
								<th><strong>Driver Name</strong></th>
								<th><strong>Origin</strong></th>
								<th><strong>Destination</strong></th>
								<th><strong>Price</strong></th>
								<th><strong>Date</strong></th>
							</tr>
						</thead>
						<tbody>
						<% rides.forEach(function(rides){ %>
							<% if (rides.origin == ride.origin || rides.destination == ride.destination || rides.date == ride.date) {%>
							<tr>
								<td><a href="/rides/<%= rides._id%>">More Info</a></td>
								<td><%= rides.driver.first %> <%= rides.driver.last %></td>
								<td><%= rides.origin %></td>
								<td><%= rides.destination %></td>
								<td><%= rides.price %></td>
								<td><%= rides.date %></td>
							</tr>
							<%}%>
						<% }); %>
						</tbody>
					</table>

			</div>
		</div>
	</div>
<script>
$(document).ready(function(){
    $('.container').fadeIn(800).removeClass('hidden');
});
</script>

<% include partials/footer %>