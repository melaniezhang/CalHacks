<% include partials/header %>
<!-- nav -->
	<nav class="navbar navbar-default">
	  <div class="container">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <a class="navbar-brand" href="/">Ridesharing</a>
	    </div>

	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

	      <ul class="nav navbar-nav navbar-right">
	        <li><a href="/logout">Log Out <i class="fa fa-sign-out" aria-hidden="true"></i></a></li>
	      </ul>
	      <ul class="nav navbar-nav navbar-right">
	        <li><a href="/profile">Profile <i class="fa fa-user" aria-hidden="true"></i></a></li>
	      </ul>
	    </div>
	  </div>
	 </nav>


<div class="container hidden">
		<div class="row">
			<div class="col-lg-12">
				<div id="content" style="padding-top:0px">
					<h1><strong><%= user.first %> <%= user.last%></strong></h1>
					<hr>
					<h3><strong>Phone Number:</strong> <%= user.phone %></h3>
					<span style="font-size:1.5em;float:left;">Previous Rides</span><a class="btn btn-primary btn-sm" href="/rides" style="float:right">Back to rides</a>
				</div>
					<table class="table" border="0" style="background-color: rgba(0,0,0,0.25);">
						<thead>
							<tr>
								<th></th>
								<th><strong>Driver Name</strong></th>
								<th><strong>Origin</strong></th>
								<th><strong>Destination</strong></th>
								<th><strong>Price</strong></th>
								<th><strong>Date</strong></th>
							</tr>
						</thead>
						<tbody>
						<% rides.forEach(function(rides){ %>
							<% if (rides.driver.username == user.username) {%>
							<tr>
								<td><a href="/rides/<%= rides._id%>">More Info</a></td>
								<td><%= rides.driver.first %> <%= rides.driver.last %></td>
								<td><%= rides.origin %></td>
								<td><%= rides.destination %></td>
								<td><%= rides.price %></td>
								<td><%= rides.date %></td>
							</tr>
							<%}%>
						<% }); %>
						</tbody>
					</table>
				</div>
</div>
<script>
$(document).ready(function(){
    $('.container').fadeIn(800).removeClass('hidden');
});
</script>

<% include partials/footer %>